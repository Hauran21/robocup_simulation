<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:include filename="macros/camera.xacro"/>

  <xacro:camera 
    name="left_camera" 
    parent="base_link" 
    xyz="-0.01 0.04 0.04" 
    rpy="0 0 ${MATH_PI/2}"
    chassis_height="${chassis_height}"
  />

  <xacro:camera 
    name="right_camera" 
    parent="base_link" 
    xyz="-0.01 -0.04 0.04" 
    rpy="0 0 ${-MATH_PI/2}"
    chassis_height="${chassis_height}"
  />

</robot>